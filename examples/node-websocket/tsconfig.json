{
  "compilerOptions": {
    "outDir": "build",
    "target": "ES3",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
